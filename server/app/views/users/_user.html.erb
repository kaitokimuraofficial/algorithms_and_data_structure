<%= stylesheet_link_tag 'common/users/user', media: 'all' %>

<div class="users-profile-inner">
  <div class="user-profile-image">
    <%= image_tag user.get_image, :size => '200x100' %>
  </div>

  <p class="user-profile-name">
    <%= user.name %>
  </p>

  <section class="stats">
    <%= render 'shared/stats' %>
  </section>

  <div class="users-profile-button">
    <% if current_user == @user %>
      <%= button_to "Edit this user", {controller: 'users', action: 'edit', id: @user.id}, method: :get, class:"mybutton" %>
    <% else %>
      <% if current_user.following?(user) %>
        <%= button_to "UNfollow this user", {controller: 'relationships', action: 'destroy', id: user.id}, method: :delete, class: "mybutton" %>
      <% else %>
        <% if current_user!= user %>
          <%= button_to "follow this user", {controller: 'relationships', action: 'create', id: user.id}, class: "mybutton" %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
