<%= form_with(model: micropost) do |form| %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>
  
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id, value: micropost.user_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
