<%= stylesheet_link_tag 'common/users/user', media: 'all' %>

<div class="users-profile-inner">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <section class="stats">
    <%= render 'shared/stats' %>
  </section>

  <div class="users-profile-button">
    <% if current_user == @user %>
      <%= button_to "Edit this user", edit_user_path(@user), class:"mybutton" %>
    <% else %>
      <% if current_user.following?(user) %>
        <%= button_to "UNfollow this user", {controller: 'relationships', action: 'destroy', id: user.id}, method: :delete, class: "mybutton" %>
      <% else %>
        <% if current_user!= user %>
          <%= button_to "follow this user", {controller: 'relationships', action: 'create', id: user.id}, class: "mybutton" %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
